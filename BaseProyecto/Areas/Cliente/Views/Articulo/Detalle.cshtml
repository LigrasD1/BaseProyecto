@model Articulo


@{
    Layout = "_Layout"; // Asegúrate de tener un diseño de Layout para tu aplicación
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <!-- Imagen del artículo -->
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="@Model.Imagen" class="img-fluid" alt="@Model.Nombre" />
            }
            else
            {
                <img src="https://via.placeholder.com/500x500" class="img-fluid" alt="Imagen no disponible" />
            }
        </div>
        <div class="col-lg-6">
            <!-- Información del artículo -->
            <h2>@Model.Nombre</h2>
            <p><strong>Categoría:</strong> @Model.Categoria?.Nombre</p>
            <p><strong>Precio:</strong> @Model.precio.Value.ToString("C")</p>
            <p><strong>Cantidad disponible:</strong> @Model.cantidad</p>

            <div class="d-flex justify-content-between align-items-center">
                @if (Model.habilitado == 1)
                {
                    <span class="badge bg-success">Disponible</span>
                }
                else
                {
                    <span class="badge bg-danger">No disponible</span>
                }

                <a asp-action="AgregarAlCarro" asp-route-idArticulo="@Model.Id" class="btn btn-primary mt-3">
                    <i class="fa-solid fa-plus"></i> Agregar al Carrito
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales para mejorar la apariencia -->
<style>
    .container {
        margin-top: 50px;
    }
    .img-fluid {
        max-width: 100%;
        height: auto;
    }
    .badge {
        font-size: 16px;
    }
    .btn-primary {
        font-size: 16px;
    }
</style>