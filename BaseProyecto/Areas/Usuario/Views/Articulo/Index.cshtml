@{
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2>
                Lista de articulos
            </h2>
        </div>
        <div class="col-4 text-end mb-2">
            <button onclick="printTable()" class="btn btn-primary mt-3 me-2">
                Imprimir Tabla
            </button>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fa-solid fa-plus"></i>Nuevo Articulo</a>
        </div>
    </div>
    <br />
    <br />

    <table id="tblArticulo" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Habilitado</th>
                <th>Categoria</th>
                <th>Operaciones</th>
            </tr>
        </thead>

    </table>

</div>
@section Scripts {
    <script src="~/js/Articulo.js"></script>
}