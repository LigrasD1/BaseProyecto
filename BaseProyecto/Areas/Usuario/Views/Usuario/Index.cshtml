	@model List<Base.Models.Usuario>

	<div class="row">


		<div class="col-8">
			<h2>
				Lista de usuarios
			</h2>
		</div>
		<div class="col-4 text-end mb-2">
			<button onclick="printTable()" class="btn btn-primary mt-3 me-2" >
				Imprimir Tabla
			</button>
			<a asp-action="Create" class="btn btn-primary mt-3"><i class="fa-solid fa-plus"></i>Nuevo usuario</a>
		</div>
	</div>
	<div>
		@if (Model.Count() > 0)
		{
			<table id="tblUsuario" class="table table-bordered" style="width:100%">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nombre</th>
						<th>Email</th>
						<th>Edad</th>
						<th>Habilitado</th>
						<th>Acciones</th>
					</tr>
				</thead>
				<tbody class="table-group-divider">
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Id</td>
							<td>@item.Nombre</td>
							<td>@item.Email</td>
							<td>@item.Edad</td>
							<td>@(item.LockoutEnabled ? "Si" : "No")</td>
						
							<td>
								<a asp-controller="Usuario"
								   asp-action="Habilitar"
								   asp-route-id="@item.Id"
								   class="btn btn-light">
									Des-Habilitar
								</a>
								<a asp-controller="Usuario"
								   asp-action="Editar"
								   asp-route-id="@item.Id"
								   class="btn btn-primary">
									Editar
								</a>
								<a asp-controller="Usuario"
								   asp-action="Borrar"
								   asp-route-id="@item.Id"
								   class="btn btn-danger">
									Borrar
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
	</div>
	@section Scripts {
		<script src="~/js/Usuario.js"></script>
	}